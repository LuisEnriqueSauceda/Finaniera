<p id="notice"><%= notice %></p>

<h1 align="center">Solicitudes aceptadas</h1>

<table>
  <thead>
    <tr>
      <th>Agente/Empresa</th>
      <th>Empresa</th>
      <th>Fecha</th>
      <th>Nombre</th>
      <th>Rfc</th>
      <th>Monto</th>
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <%if credit.agente_empresa %>
          <td>Agente</td>
        <%else%>
          <td>Empresa</td>
        <%end%>
        <td><%= credit.referencia_agenteEmpresa %></td>
        <td><%= credit.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= "#{credit.apellido_paterno} #{credit.apellido_materno} #{credit.nombre_1} #{credit.nombre_2}" %></td>
        <td><%= credit.RFC %></td>
        <td><%= Dinero.to_money(credit.monto_solicitud) %></td>
        <!--<td><%= link_to 'Mostrar',credit ,class:'crud-links' %></td>-->
        <td><%=link_to  'Cancelar', credit_path(credit,:credit=>{status:2}), :method=> :put ,class:"waves-effect waves-light btn-large"%></td>
        <td><%= link_to 'Imprimir docs',"/view_credits/documentos?clave=#{credit.id}",class:'crud-links' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva solicitud', new_credit_path, class:"crud-links" %>
