<p id="notice"><%= notice %></p>

<h1>Solicitudes de creditos por aceptar</h1>

<table>
  <thead>
    <tr>
      <th>Agente empresa</th>
      <th>Empresa</th>
      <th>Fecha</th>
      <th>Nombre</th>
      <th>Rfc</th>
      <th>Monto</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.agente_empresa %></td>
        <td><%= credit.referencia_agenteEmpresa %></td>
        <td><%= credit.fecha %></td>
        <td><%= "#{credit.apellido_paterno} #{credit.apellido_materno} #{credit.nombre_1} #{credit.nombre_2}" %></td>
        <td><%= credit.RFC %></td>
         <td><%= credit.monto_solicitud %></td>
        <td><%= link_to 'Mostrar',"view_credits/#{credit.id}",class:'crud-links' %></td>
        <td><%= link_to 'Editar', edit_credit_path(credit),class:'crud-links' %></td>
        <td><%= link_to 'Eliminar', credit, method: :delete, data: { confirm: 'Are you sure?' },class:'crud-links' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva solicitud', new_credit_path, class:"crud-links" %>
